package day01;

public class Example04 {
	
	public static void main(String[] args) {
		
		//문자열 다루기
		//String str = "안녕하세요";
		String str = new String(new char[] {'안','녕','하','세','요'};
		System.out.println(str); //인덱스 번호가 있음
		
		char c = str.charAt(0);
		System.out.println(c); //문자열 한글자 자르기
		
		
	}
	
	

}
